# PharmaGuard Backend Configuration

# Flask/FastAPI Configuration
FLASK_ENV=production
DEBUG=False

# JWT Configuration (IMPORTANT: Change this in production!)
SECRET_KEY=your-secret-key-change-in-production-12345

# Database Configuration
# Preferred (Render/Postgres): provide DATABASE_URL
# Example:
# DATABASE_URL=postgresql://user:password@host:5432/database_name
#
# Optional component fallback (used only if DATABASE_URL is not set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pharmaguard
# DB_USER=pharmaguard
# DB_PASSWORD=

# Google Gemini LLM Configuration
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:5173,https://pharmaguard-frontend.vercel.app

# Email Configuration (SMTP)
# Leave empty for development mode (verification codes will be shown in response)
# For production, configure SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@pharmaguard.com
SMTP_FROM_NAME=PharmaGuard
